mainmenu_name 'SnapGear Embedded Linux Configuration'
mainmenu_option next_comment
comment 'Vendor/Product Selection'
comment 'Select the Vendor you wish to target'
choice 'Vendor' "GDB CONFIG_DEFAULTS_GDB \
Insight CONFIG_DEFAULTS_INSIGHT \
Intel CONFIG_DEFAULTS_INTEL \
qemu CONFIG_DEFAULTS_QEMU \
" SnapGear
comment 'Select the Product you wish to target'
if [ "$CONFIG_DEFAULTS_GDB" = "y" ]; then
choice 'GDB Products' "ARMulator CONFIG_DEFAULTS_GDB_ARMULATOR \
ARMulator-EB CONFIG_DEFAULTS_GDB_ARMULATOR_EB \
SkyEye CONFIG_DEFAULTS_GDB_SKYEYE \
" ARMulator
fi
if [ "$CONFIG_DEFAULTS_INSIGHT" = "y" ]; then
choice 'Insight Products' "XC2V1K_Microblaze CONFIG_DEFAULTS_INSIGHT_XC2V1K_MICROBLAZE \
XC2VP7_Microblaze CONFIG_DEFAULTS_INSIGHT_XC2VP7_MICROBLAZE \
mbvanilla_net CONFIG_DEFAULTS_INSIGHT_MBVANILLA_NET \
" XC2V1K_Microblaze
fi
if [ "$CONFIG_DEFAULTS_INTEL" = "y" ]; then
choice 'Intel Products' "IXDP2800 CONFIG_DEFAULTS_INTEL_IXDP2800 \
IXDP425 CONFIG_DEFAULTS_INTEL_IXDP425 \
IXDP465 CONFIG_DEFAULTS_INTEL_IXDP465 \
IXDPG425 CONFIG_DEFAULTS_INTEL_IXDPG425 \
MonteJade CONFIG_DEFAULTS_INTEL_MONTEJADE \
" IXDP2800
fi
if [ "$CONFIG_DEFAULTS_QEMU" = "y" ]; then
choice 'qemu Products' "sim CONFIG_DEFAULTS_QEMU_SIM \
" sim
fi
endmenu
mainmenu_option next_comment
comment 'Kernel/Library/Defaults Selection'
choice 'Kernel Version' "linux-2.0.x CONFIG_DEFAULTS_KERNEL_2_0 \
linux-2.4.x CONFIG_DEFAULTS_KERNEL_2_4 \
linux-2.6.x CONFIG_DEFAULTS_KERNEL_2_6 \
" linux-2.6.x
choice 'Libc Version' "None CONFIG_DEFAULTS_LIBC_NONE \
uC-libc CONFIG_DEFAULTS_LIBC_UC_LIBC \
uClibc CONFIG_DEFAULTS_LIBC_UCLIBC \
" uClibc
bool 'Default all settings (lose changes)'	CONFIG_DEFAULTS_OVERRIDE
bool 'Customize Kernel Settings'			CONFIG_DEFAULTS_KERNEL
bool 'Customize Vendor/User Settings'		CONFIG_DEFAULTS_VENDOR
bool 'Update Default Vendor Settings'		CONFIG_DEFAULTS_VENDOR_UPDATE
endmenu
